-- ALTER

ALTER TABLE students
ADD COLUMN age INT NOT NULL DEFAULT 19;

ALTER TABLE students
MODIFY age VARCHAR(2);

ALTER TABLE students
CHANGE age stu_age INT;

ALTER TABLE students
RENAME TO stu;

ALTER TABLE stu
RENAME TO students;

ALTER TABLE students
DROP COLUMN stu_age;

SELECT * FROM students;

CREATE TABLE dept(
id INT PRIMARY KEY,
name VARCHAR(50)
);

INSERT INTO dept VALUES
(101,"ECE"),
(102,"CSE");

UPDATE dept
SET id = 104
WHERE id = 102;

SELECT * FROM dept;

 CREATE TABLE teacher(
 id INT PRIMARY KEY,
 name VARCHAR(50),
 dept_id INT,
 FOREIGN KEY (dept_id) REFERENCES dept(id)
 ON DELETE CASCADE
 ON UPDATE CASCADE
 );
 
INSERT INTO teacher VALUES
(101 ,"SUNNY", 102),
(102,"HIMANSHU",101),
(103,"KHUSHABU",102);

UPDATE teacher
SET id = 104
WHERE id =103;
 
